{
  "parser": "babel-eslint",

  "extends": [
    "eslint-config-uber-es2015",
    "eslint-config-uber-jsx",
    "prettier"
  ],

  "plugins": [
    "prettier"
  ],

  "globals": {
    "Promise": true
  },

  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "eqeqeq": [2, "smart"],
    "no-eq-null": 0,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "bracketSpacing": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": false
      }
    ]
  }
}
